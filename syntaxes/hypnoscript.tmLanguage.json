{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "HypnoScript",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.hypno",
          "match": "\\b(Focus|Relax|if|else|while|loop|snap|sink|suggestion|awaken|observe|induce|session|expose|conceal|dominant|drift|tranceify|mindLink|sharedTrance|imperative|entrance|finale|deepFocus|call|from|external|freeze|whisper|oscillate|anchor|implant|trigger|command|repeatAction|repeatUntil|repeatWhile|delayedSuggestion|ifTranced|tryOrAwaken|ensureAwakening|sequentialTrance)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.hypno",
          "match": "\\b(number|string|boolean|trance)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.hypno",
          "match": "\\b(youAreFeelingVerySleepy|youCannotResist|lookAtTheWatch|fallUnderMySpell|yourEyesAreGettingHeavy|goingDeeper|underMyControl|resistanceIsFutile|==|!=|>=|<=|>|<|\\+|\\-|\\*|/|%)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.hypno",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.hypno",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hypno",
          "match": "\\b[0-9]+(?:\\.[0-9]+)?\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.hypno",
          "match": "//.*"
        },
        {
          "name": "comment.block.hypno",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    }
  },
  "scopeName": "source.hyp"
}
