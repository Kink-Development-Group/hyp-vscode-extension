{
  "scopeName": "source.hypnoscript",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#comments" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.hypnoscript",
          "match": "\\b(Focus|Relax|if|else|while|loop|snap|sink|suggestion|awaken|call|induce|observe|trance|entrance|finale|deepFocus|from|external|session|constructor|expose|conceal|dominant|drift|tranceify|mindLink|sharedTrance|imperative|freeze|whisper|oscillate|anchor|implant|trigger|command|repeatAction|repeatUntil|repeatWhile|delayedSuggestion|ifTranced|tryOrAwaken|ensureAwakening|sequentialTrance)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.hypnoscript",
          "match": "\\b(youAreFeelingVerySleepy|youCannotResist|lookAtTheWatch|fallUnderMySpell|yourEyesAreGettingHeavy|goingDeeper|underMyControl|resistanceIsFutile|==|!=|>=|<=|>|<|\\+|\\-|\\*|/|%)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.hypnoscript",
          "match": "\\b(number|string|boolean|trance)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.hypnoscript",
          "match": "\"(?:[^\"\\\\]|\\\\.)*\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hypnoscript",
          "match": "\\b[0-9]+(?:\\.[0-9]+)?\\b"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.hypnoscript",
          "match": "//.*"
        },
        {
          "name": "comment.block.hypnoscript",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    }
  }
}
